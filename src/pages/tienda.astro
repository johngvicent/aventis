        <!-- Script de filtrado y control de carrito -->
        <script is:inline>
            // Funciones globales para agregar/quitar productos
            function addProductToCart(id, nombre, precio) {
                if (window.addToCart) {
                    window.addToCart({ id, nombre, precio });
                }
            }

            function removeProductFromCart(id) {
                if (window.removeItem) {
                    window.removeItem(id);
                }
            }

            // Actualizar UI de los productos según el carrito
            function updateProductUI() {
                const cart = window.getCart ? window.getCart() : {};
                console.log('Actualizando UI. Carrito:', cart);
                
                document.querySelectorAll('.producto-card').forEach(card => {
                    const productoId = card.getAttribute('data-producto-id');
                    const quantitySpan = card.querySelector('.product-quantity');
                    
                    if (productoId && quantitySpan) {
                        const quantity = cart[productoId]?.cantidad || 0;
                        console.log(`Producto ${productoId}: cantidad = ${quantity}`);
                        quantitySpan.textContent = quantity;
                    }
                });
            }

            window.addEventListener('DOMContentLoaded', () => {
                // Actualizar UI inicial después de un delay para asegurar que window.getCart esté disponible
                setTimeout(() => {
                    console.log('Inicializando UI de productos');
                    updateProductUI();
                }, 200);

                // Escuchar cambios en el carrito
                window.addEventListener('cartUpdated', (event) => {
                    console.log('Evento cartUpdated recibido:', event.detail);
                    updateProductUI();
                });

                // Filtros de productos
                const productos = document.querySelectorAll('.producto-card');
                const botonesFiltro = document.querySelectorAll('.btn-filtro');
                const productosGrid = document.getElementById('productos-grid');

                botonesFiltro.forEach(boton => {
                    boton.addEventListener('click', function() {
                        const categoria = this.getAttribute('data-filtro');
                        
                        // Actualizar botones activos
                        botonesFiltro.forEach(b => {
                            b.classList.remove('bg-[#007078]', 'text-white', 'border-[#007078]');
                            b.classList.add('bg-white', 'border-gray-300', 'text-gray-700');
                        });
                        this.classList.add('bg-[#007078]', 'text-white', 'border-[#007078]');
                        this.classList.remove('bg-white', 'border-gray-300', 'text-gray-700');

                        // Filtrar productos con animación
                        if (productosGrid) {
                            productosGrid.style.opacity = '0';
                            
                            setTimeout(() => {
                                productos.forEach(producto => {
                                    const esVisible = categoria === 'todos' || producto.getAttribute('data-categoria') === categoria;
                                    
                                    if (esVisible) {
                                        producto.classList.remove('hidden');
                                        setTimeout(() => {
                                            producto.style.opacity = '1';
                                            producto.style.transform = 'translateY(0)';
                                        }, 50);
                                    } else {
                                        producto.style.opacity = '0';
                                        producto.style.transform = 'translateY(20px)';
                                        setTimeout(() => {
                                            producto.classList.add('hidden');
                                        }, 300);
                                    }
                                });
                                
