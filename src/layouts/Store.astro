---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import StoreContainer from "../components/StoreContainer";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon-aventis.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<title>Aventis Viajes</title>
	</head>
	<body class="selection:bg-yellow-600/85 selection:text-white">
        <StoreContainer client:load>
			<!-- Header con Carrito -->
			<header>
				<a href="/" class="brand-container">
				<img src="/logotipo-blanco.svg" alt="Aventis Viajes">
				<h2 class="text-white!">Viajes</h2>
				</a>

				<button class="hamburger" aria-label="Abrir menú">
					<span class="bar"></span>
					<span class="bar"></span>
					<span class="bar"></span>
				</button>

				<nav class="nav-menu">
					<ul>
						<li><a href="/">Home</a></li>
						<li><a href="/servicios">Servicios</a></li>
						<li><a href="/tienda">Tienda</a></li>
						<li><a href="/blog">Bitácora</a></li>
						<li><a href="/contacto">Contacto</a></li>
					</ul>
				</nav>
    		</header>
			<slot />
		</StoreContainer>  
		<Footer />
		
		<script>
        // Lógica del Menú Hamburguesa
        const hamburger = document.querySelector('.hamburger');
        const navMenu = document.querySelector('.nav-menu');
        const body = document.querySelector('body');

        hamburger!.addEventListener('click', () => {
            // 1. Activa el botón (animación a X)
            hamburger!.classList.toggle('active');
            // 2. Muestra el menú
            navMenu!.classList.toggle('active');
            // 3. Bloquea el scroll del body cuando el menú está abierto
            if (navMenu!.classList.contains('active')) {
                body!.style.overflow = 'hidden';
            } else {
                body!.style.overflow = 'auto';
            }
        });

        // Cierra el menú al hacer clic en un enlace
        document.querySelectorAll('.nav-menu a').forEach(link => {
            link.addEventListener('click', () => {
                hamburger!.classList.remove('active');
                navMenu!.classList.remove('active');
                body!.style.overflow = 'auto';
            });
        });
    </script>
	</body>
</html>

<style>
	
	/* 1. Variables y Reset Básico */
    :root {
        --bg-header: #003a4b; /* Un poco más opaco para legibilidad */
        --text-color: #e7e7e7;
        --accent-color: #B78B1E;
        --hover-bg: #ffffff1a;
        --header-height: 80px;
    }

    html, body {
        margin: 0;
        padding-top: var(--header-height);
        font-family: 'Montserrat', sans-serif;
        background-color: #f1f5f9;
    }

    /* 2. Estilo del Header */
    header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: var(--header-height);
        background: linear-gradient(to right, var(--bg-header), #005f66);
        color: var(--text-color);
        padding: 0 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        z-index: 1000;
        box-sizing: border-box;
    }

    .brand-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
        text-decoration: none;
        color: inherit;
        z-index: 1001; /* Para que quede por encima del menú móvil */

    }

    header img {
        align-items: center;
        align-self: center;
        height: 60px;
        width: auto;
        padding left: 10px;
    }

    header h2 {
        font-family: eb garamond, serif;
        margin: 0;
        font-weight: 800;
        font-size: 1.9rem;
        letter-spacing: -0.5px;
        color: white;
        align-self: bottom;
        align-items: center;
        letter-spacing: 0.1rem;
    }

    /* 3. Navegación Desktop (Por defecto) */
    .nav-menu ul {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
        gap: 2.5rem;
    }

    .nav-menu a {
        color: var(--text-color);
        font-weight: 600;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 0.5rem 0.1rem;
        position: relative;
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .nav-menu a:hover {
        color: var(--accent-color);
        font-weight: 800;
        transform: translateY(-2px);
    }

    .nav-menu a::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background-color: var(--color-accent);
        transition: var(--transition);
    }

    .nav-menu a:hover::after {
        width: 100%;
    }

    /* --- ESTILOS DEL BOTÓN HAMBURGUESA (Oculto en Desktop) --- */
    .hamburger {
        display: none; /* Oculto por defecto */
        cursor: pointer;
        background: none;
        border: none;
        padding: 10px;
        z-index: 1001; /* Por encima del menú desplegable */
    }

    .bar {
        display: block;
        width: 25px;
        height: 3px;
        margin: 5px auto;
        -webkit-transition: all 0.3s ease-in-out;
        transition: all 0.3s ease-in-out;
        background-color: white;
        border-radius: 2px;
    }

    /* --- MEDIA QUERY: MÓVILES (Menor a 768px) --- */
    @media (max-width: 768px) {
        header {
            padding: 0 1.5rem; /* Ajuste ligero de padding */
        }

        /* Mostrar el botón hamburguesa */
        .hamburger {
            display: block;
        }

        /* Animación del icono a una 'X' */
        .hamburger.active .bar:nth-child(1) {
            transform: translateY(8px) rotate(45deg);
        }
        .hamburger.active .bar:nth-child(2) {
            opacity: 0;
        }
        .hamburger.active .bar:nth-child(3) {
            transform: translateY(-8px) rotate(-45deg);
        }

        /* Ocultar y Estilizar el Menú Móvil */
        .nav-menu {
            position: fixed;
            left: -100%; /* Oculto a la izquierda */
            top: 0;
            width: 100%;
            height: 100vh; /* Ocupa toda la pantalla */
            background-color: var(--bg-header); /* Fondo casi sólido */
            backdrop-filter: blur(15px);
            display: flex;
            flex-direction: column;
            justify-content: center; /* Centrado vertical */
            align-items: center; /* Centrado horizontal */
            transition: 0.4s ease-in-out; /* Animación suave de entrada */
            text-align: center;
        }

        .nav-menu.active {
            left: 0; /* Entra en pantalla */
        }

        .nav-menu ul {
            flex-direction: column; /* Lista vertical */
            gap: 2.5rem; /* Más espacio entre enlaces en móvil */
        }

        .nav-menu a {
            font-size: 1.5rem; /* Texto más grande para dedos */
        }

        /* Ajuste opcional para ocultar texto del logo en pantallas muy pequeñas */
        @media (max-width: 600px) {
            header h2 {
                display: none;
            }
            header img {
                height: 60px;
                padding-left: 20%;
            }
        }
    }
</style>